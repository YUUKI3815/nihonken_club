<div class= "container">
  <h3>ユーザー編集</h3>
  <div class= "row">
    <div class= "col">
      <%= form_with model: @user, url: users_my_page_path, method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :氏名, class: "col-3" %>
          <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control col-3 mr-3" %>
          <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control col-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :フリガナ, class: "col-3" %>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control col-3 mr-3" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control col-3" %>
      </div>

       <div class="form-group row">
       <%= f.label :email, 'メールアドレス', class: "col-2" %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control  col-3" %>
      </div>

      <div class= "form-group row">
       <%= f.label :nickname, 'ニックネーム',class: "col-2" %>
       <%= f.text_field :nickname, autocomplete: "nickname", placeholder: 'へのへの', class: "form-control  col-3" %>
      </div>

      <div class="form-group row">
       <%= f.label :introduction, '紹介文',class: "col-2" %>
       <%= f.text_area :introduction, autocomplete: "introduction", placeholder: '自己紹介', class: "form-control  col-3" %>
      </div>

      <div class= "form-group row">
        <%= f.label :profile_image, 'プロフィール画像', class: "col-2" %>
        <%= f.file_field :profile_image, class: "form-control col-3" %>
      </div>
      <div class= "form-group row">
        <%= f.submit "更新",class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
