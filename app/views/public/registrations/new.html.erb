<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class ="form-group row">
    <%= f.label :名前, class: "col-1" %>
    <%= f.label :last_name, '(姓)', class: "col-1" %>
    <%= f.text_field :last_name, autocomplete: "last_name", placeholder: '令和', class: "form-control  col-3" %>
    <%= f.label :first_name, '(名)', class: "col-1" %>
    <%= f.text_field :first_name, autocomplete: "first_name", placeholder: '道子', class: "form-control  col-3" %>
  </div>

   <div class="form-group row">
      <%= f.label :フリガナ, class: "col-1" %>
      <%= f.label :last_name_kana, '(セイ)'%>
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: 'レイワ', class: "form-control  col-3" %>
      <%= f.label :first_name_kana, '(メイ)', class: "col-1" %>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: 'ミチコ', class: "form-control  col-3" %>
    </div>

  <div class="form-group row">
    <%= f.label :email, 'メールアドレス', class: "col-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control  col-3" %>
  </div>
  
  <div class= "form-group row">
    <%= f.label :nickname, 'ニックネーム',class: "col-2" %>
    <%= f.text_field :nickname, autocomplete: "nickname", placeholder: 'へのへの', class: "form-control  col-3" %>
  </div>

  <div class="form-group row">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
